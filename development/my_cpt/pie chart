import matplotlib
matplotlib.use('TkAgg')
import matplotlib.pyplot as plt

categories = ['vehicle', 'shoes', 'gifts', 'travel']
slices = [15, 45, 24, 10]

plt.pie(slices, labels=categories, autopct='%1.1f%%', shadow=True, startangle=140)
plt.axis('equal')
plt.title('Monthly Expenses')
plt.show()

