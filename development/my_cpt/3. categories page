from Tkinter import *

root = Tk()


def categories():
    label = Label(root, text="CATEGORIES")
    label.grid(columnspan=4)
    button = Button(root, text="vehicle")
    button.grid(row=2, column=1, sticky=W)
    button = Button(root, text="interest")
    button.grid(row=2, column=2)
    button = Button(root, text="clothing")
    button.grid(row=2, column=3, sticky=E)
    button = Button(root, text="shoes")
    button.grid(row=3, column=1, sticky=W)
    button = Button(root, text="salary")
    button.grid(row=3, column=2)
    button = Button(root, text="travel")
    button.grid(row=3, column=3, sticky=E)
    button = Button(root, text="gifts")
    button.grid(row=4, column=1, sticky=W)
    button = Button(root, text="pet")
    button.grid(row=4, column=2)
    button = Button(root, text="books")
    button.grid(row=4, column=3, sticky=E)
    button = Button(root, text="cosmetics")
    button.grid(row=5, column=1, sticky=W)
    button = Button(root, text="stationary")
    button.grid(row=5, column=2)
    button = Button(root, text="restaurant")
    button.grid(row=5, column=3, sticky=E)


def button():
    report = Button(root, text="report")
    report.grid(row=0, column=3, sticky=E)
def main():
    categories()
    button()


main()
root.mainloop()
