from Tkinter import *

root = Tk()


def text(category):
    label_0 = Label(root, text=category)
    label_1 = Label(root, text="Amount: ")
    label_0.grid(columnspan=2)
    label_1.grid(row=1)


def user_input():
    entry_1 = Entry(root)
    entry_1.grid(row=1, column=1)


def buttons():
    button = Button(root, text="<--")
    button.grid(row=0, column=0)
    button = Button(root, text="add")
    button.grid(row=3, columnspan=2)


def main():
    text("Restaurant")
    user_input()
    buttons()


main()
root.mainloop()
